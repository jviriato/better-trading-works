{
  "manifest_version": 2,
  "name": "Better Trading Works",
  "description": "Calculate trading works hours",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.tradingworks.net/*"],
      "js": ["./dist/background.bundle.js"]
    }
  ]
}